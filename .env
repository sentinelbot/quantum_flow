# .env - Environment Configuration for QuantumFlow Trading Bot
# SECURITY WARNING: Keep this file private and never commit to version control

# ==== Database Configuration ====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=quantumflow
DB_USER=quantumuser
DB_PASSWORD=your_secure_password_here

# ==== Security Keys ====
# Generate these with: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=your_32_byte_encryption_key_here
JWT_SECRET=your_32_byte_jwt_secret_key_here

# ==== Telegram Bots ====
# Get these from BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
ADMIN_BOT_TOKEN=your_admin_bot_token_here

# ==== Exchange API Keys ====
# These are just examples - users will provide their own
# Default keys for paper trading mode
BINANCE_API_KEY=paper_trading_api_key
BINANCE_API_SECRET=paper_trading_api_secret

# ==== Admin Configuration ====
# Comma-separated list of Telegram user IDs with admin privileges
ADMIN_USER_IDS=123456789,987654321

# ==== API and Web Interface ====
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8000

# ==== Notification Settings ====
# SMTP settings for email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
NOTIFICATION_FROM_EMAIL=quantumflow@yourdomain.com

# ==== Trading Parameters ====
DEFAULT_RISK_LEVEL=MEDIUM
MAX_POSITION_SIZE_PCT=5.0
DRAWDOWN_PROTECTION_THRESHOLD=5.0
EMERGENCY_STOP_THRESHOLD=20.0

# ==== System Configuration ====
LOG_LEVEL=INFO
ENVIRONMENT=production  # development, testing, production